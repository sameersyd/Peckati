<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282B30">

    <RelativeLayout
        android:id="@+id/userView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/captured_food_pic"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="270dp"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/oursug"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our suggestion"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#D6D6D6"
            android:textSize="22sp"
            android:layout_marginTop="70dp"
            android:layout_alignTop="@id/captured_food_pic"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/captured_food_txt"
            android:layout_below="@id/oursug"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/lineraD"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_below="@id/captured_food_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/captured_buyImg"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/buy_food"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#727272"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Restaurants"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#727272"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/captured_cookImg"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/cook_food"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cook"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#727272"
                    android:textSize="22sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetch an awesome Recipe"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#727272"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
